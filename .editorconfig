root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4

[{*.bash,*.sh,*.zsh}]
indent_size = 2
tab_width = 2

[{*.yml,*.yaml}]
indent_size = 2

[{*.tf,*.tfvars,*.yml,*.yaml}]
indent_size = 2

[{*.js,*.ts}]
indent_size = 2
